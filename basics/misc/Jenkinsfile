node {
   def commit_id
   stage('step a') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs') {
       sh 'cd basics && npm install --only=dev'
       sh 'cd basics && npm test'
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
       def app = docker.build("shirepo/jenkins:${commit_id}", './basics').push()
     }
   }
   stage('docker run') {
     sh label: '', script: '''
    apt-get install jq
    docker rm -f docker_test
    docker run --rm -tid --name docker_test -p 3000 shirepo/jenkins:latest
    PORT=$(docker inspect docker_test | jq -r '.[].NetworkSettings.Ports."3000/tcp"[].HostPort')
    echo $PORT
    curl -i localhost:$PORT
    docker kill docker_test
      
      '''
     }
   }

